<Window x:Class="youtube_dl_v2.Spotify_Status"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:youtube_dl_v2"
        mc:Ignorable="d"
        Title="Status" Height="100" Width="400" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <Label x:Name="lblStatus" Content="{Binding Path=StatusOutput, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="339" MinWidth="339" MaxWidth="339" Height="45" MinHeight="45" MaxHeight="45" Background="#FFFDEFEF"/>
    </Grid>
</Window>
